# =====================================================
# RESERREGA - Environment Variables (Development)
# =====================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to git!
# =====================================================

# -----------------------------------------------------
# SUPABASE CONFIGURATION
# -----------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Base URL (optional - defaults to /api)
NEXT_PUBLIC_API_URL=/api

# Node Environment
NODE_ENV=development

# -----------------------------------------------------
# STRIPE PAYMENT INTEGRATION (Optional)
# -----------------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# -----------------------------------------------------
# EMAIL SERVICE (Optional - Resend)
# -----------------------------------------------------
# Get this from: https://resend.com/api-keys
RESEND_API_KEY=re_your-resend-api-key

# -----------------------------------------------------
# SECURITY
# -----------------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# -----------------------------------------------------
# PUPPETEER CONFIGURATION
# -----------------------------------------------------
# Skip Chromium download (recommended for serverless)
PUPPETEER_SKIP_DOWNLOAD=true

# -----------------------------------------------------
# DATABASE CONFIGURATION (if using local Supabase)
# -----------------------------------------------------
# Only needed for local development with Supabase CLI
# NEXT_PUBLIC_SUPABASE_URL=http://localhost:8002
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-local-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-local-service-role-key
